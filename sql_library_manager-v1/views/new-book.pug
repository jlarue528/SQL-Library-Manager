extends layout.pug
block content
    
    h1= title

    if errors
        p 
            ul  
                each error in errors
                    li= error.message

    form(method= 'POST', action='/books/new')
        p
            label(for='title') Title
                input#title(type='text', name='title')
        p  
            label(for='author') Author
                input#author(type='text', name='author')
        p
            label(for='genre') Genre
                input#genre(type='text', name='genre')
        p
            label(for='year') Year
                input#year(type='year', name='year')
        p
            input(
                type='submit',
                value='Create New Book'
            )
        p
            a(class='button', href='/books') Cancel